#!/bin/sh
mail=$(tail -1 /tmp/himalaya-counter | grep -qw '0' && echo "" || echo "ðŸ“«")

mute=$(amixer sget Master | grep -qw 'off' && echo "ðŸ”‡" || echo "")

lan=$(ping google.com -q -c 1 -W 1 -w 1 | grep -qw '0% packet loss' && echo "ðŸ“¡" || echo "")

music=$(playerctl metadata | grep 'title' | sed -re 's,\s+, ,g' | cut -d ' ' -f 3-)

echo $music $mail $mute $lan $(date)
